// Prisma Schema for TradeGuardAI
// This schema is prepared for future features
// Currently using Memberstack for user management

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// FUTURE: Portfolio Management
// ============================================

/// User's cryptocurrency holdings
/// Note: User auth is handled by Memberstack, we store their memberstackId
model PortfolioHolding {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId   String   // Reference to Memberstack user
  cryptoSymbol    String   // e.g., "BTC", "ETH"
  amount          Float
  averageBuyPrice Float?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([memberstackId, cryptoSymbol])
  @@index([memberstackId])
}

/// Transaction history for portfolio
model Transaction {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId   String          // Reference to Memberstack user
  cryptoSymbol    String
  type            TransactionType
  amount          Float
  pricePerUnit    Float
  totalValue      Float
  fee             Float?
  notes           String?
  transactionDate DateTime        @default(now())
  createdAt       DateTime        @default(now())

  @@index([memberstackId])
  @@index([cryptoSymbol])
}

enum TransactionType {
  BUY
  SELL
  TRANSFER_IN
  TRANSFER_OUT
}

// ============================================
// FUTURE: User Preferences & Watchlist
// ============================================

/// User preferences (supplements Memberstack data)
model UserPreferences {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId        String   @unique
  theme                String   @default("light")
  currency             String   @default("USD")
  timezone             String?
  notificationsEnabled Boolean  @default(true)
  emailAlerts          Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

/// User's watchlist of cryptocurrencies
model Watchlist {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId String
  cryptoSymbol  String
  addedAt       DateTime @default(now())

  @@unique([memberstackId, cryptoSymbol])
  @@index([memberstackId])
}

// ============================================
// FUTURE: AI Predictions
// ============================================

/// AI-generated price predictions
model Prediction {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  cryptoSymbol    String
  predictionType  PredictionType
  confidenceScore Float          // 0-100
  currentPrice    Float
  predictedPrice  Float?
  timeHorizon     String         // e.g., "1h", "24h", "7d"
  stopLoss        Float?
  takeProfit      Float?
  modelVersion    String?
  featuresUsed    Json?          // Store technical indicators used
  validUntil      DateTime
  createdAt       DateTime       @default(now())

  @@index([cryptoSymbol])
  @@index([createdAt])
}

enum PredictionType {
  BULLISH
  BEARISH
  NEUTRAL
}

/// Track prediction accuracy
model PredictionResult {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  predictionId       String   @db.ObjectId
  actualPrice        Float
  wasCorrect         Boolean
  priceChangePercent Float
  evaluatedAt        DateTime @default(now())

  @@index([predictionId])
}

// ============================================
// FUTURE: Resources & Educational Content
// ============================================

/// Educational resources and articles
model Resource {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  slug         String    @unique
  category     String    // e.g., "guides", "analysis", "news"
  content      String
  excerpt      String?
  thumbnailUrl String?
  authorName   String?
  published    Boolean   @default(false)
  publishedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([category])
  @@index([published])
}

// ============================================
// CACHE: Cryptocurrency Data Cache
// ============================================

/// Cache for cryptocurrency data (reduces external API calls)
model CryptoCache {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  symbol       String   @unique
  name         String
  currentPrice Float
  marketCap    Float?
  volume24h    Float?
  change1h     Float?
  change24h    Float?
  change7d     Float?
  rank         Int?
  logoUrl      String?
  lastUpdated  DateTime @default(now())

  @@index([rank])
  @@index([lastUpdated])
}

// ============================================
// ALERTS: Price Alerts (Future Feature)
// ============================================

/// User-defined price alerts
model PriceAlert {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId String
  cryptoSymbol  String
  targetPrice   Float
  condition     AlertCondition
  isActive      Boolean        @default(true)
  triggeredAt   DateTime?
  createdAt     DateTime       @default(now())

  @@index([memberstackId])
  @@index([cryptoSymbol, isActive])
}

enum AlertCondition {
  ABOVE
  BELOW
}

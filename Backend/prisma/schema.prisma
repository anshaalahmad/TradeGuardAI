// Prisma Schema for TradeGuardAI
// This schema is prepared for future features
// Currently using Memberstack for user management

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// FUTURE: Portfolio Management
// ============================================

/// User's cryptocurrency holdings
/// Note: User auth is handled by Memberstack, we store their memberstackId
model PortfolioHolding {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId   String   // Reference to Memberstack user
  cryptoSymbol    String   // e.g., "BTC", "ETH"
  amount          Float
  averageBuyPrice Float?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([memberstackId, cryptoSymbol])
  @@index([memberstackId])
}

/// Transaction history for portfolio
model Transaction {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId   String          // Reference to Memberstack user
  cryptoSymbol    String
  type            TransactionType
  amount          Float
  pricePerUnit    Float
  totalValue      Float
  fee             Float?
  notes           String?
  transactionDate DateTime        @default(now())
  createdAt       DateTime        @default(now())

  @@index([memberstackId])
  @@index([cryptoSymbol])
}

enum TransactionType {
  BUY
  SELL
  TRANSFER_IN
  TRANSFER_OUT
}

// ============================================
// FUTURE: User Preferences & Watchlist
// ============================================

/// User preferences (supplements Memberstack data)
model UserPreferences {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId        String   @unique
  theme                String   @default("light")
  currency             String   @default("USD")
  timezone             String?
  notificationsEnabled Boolean  @default(true)
  emailAlerts          Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

/// User's watchlist of cryptocurrencies
model Watchlist {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId String
  cryptoSymbol  String
  addedAt       DateTime @default(now())

  @@unique([memberstackId, cryptoSymbol])
  @@index([memberstackId])
}

// ============================================
// FUTURE: AI Predictions
// ============================================

/// AI-generated price predictions
model Prediction {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  cryptoSymbol    String
  predictionType  PredictionType
  confidenceScore Float          // 0-100
  currentPrice    Float
  predictedPrice  Float?
  timeHorizon     String         // e.g., "1h", "24h", "7d"
  stopLoss        Float?
  takeProfit      Float?
  modelVersion    String?
  featuresUsed    Json?          // Store technical indicators used
  validUntil      DateTime
  createdAt       DateTime       @default(now())

  @@index([cryptoSymbol])
  @@index([createdAt])
}

enum PredictionType {
  BULLISH
  BEARISH
  NEUTRAL
}

/// Track prediction accuracy
model PredictionResult {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  predictionId       String   @db.ObjectId
  actualPrice        Float
  wasCorrect         Boolean
  priceChangePercent Float
  evaluatedAt        DateTime @default(now())

  @@index([predictionId])
}

// ============================================
// RESOURCES: Educational Content
// ============================================

/// Learning articles with video content (blogs)
model LearningArticle {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  slug         String    @unique
  excerpt      String    // Short preview text
  content      String    // Full article content (markdown/HTML)
  youtubeUrl   String?   // YouTube video embed URL
  thumbnailUrl String?   // Article thumbnail image
  category     String    // e.g., "beginner", "technical-analysis", "trading-strategies", "market-analysis"
  tags         String[]  // Array of tags for filtering
  readTime     Int       // Estimated read time in minutes
  authorName   String?
  authorAvatar String?
  difficulty   String    @default("beginner") // beginner, intermediate, advanced
  published    Boolean   @default(false)
  featured     Boolean   @default(false) // Show on featured section
  viewCount    Int       @default(0)
  publishedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([category])
  @@index([published])
  @@index([featured])
  @@index([difficulty])
}

/// Chart patterns with images and explanations
model ChartPattern {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  slug         String   @unique
  imageUrl     String   // Pattern image URL
  description  String   // Full description/explanation
  excerpt      String   // Short preview text
  patternType  String   // bullish, bearish, continuation, reversal
  difficulty   String   @default("beginner") // beginner, intermediate, advanced
  keyPoints    String[] // Array of key learning points
  howToTrade   String?  // Trading strategy for this pattern
  examples     String[] // Array of real-world example image URLs
  reliability  String   @default("medium") // low, medium, high
  published    Boolean  @default(false)
  viewCount    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([patternType])
  @@index([difficulty])
  @@index([published])
}

/// User bookmarks for articles and patterns
model UserBookmark {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId String       // Reference to Memberstack user
  resourceType  ResourceType // article or pattern
  resourceId    String       @db.ObjectId // ID of the bookmarked resource
  addedAt       DateTime     @default(now())

  @@unique([memberstackId, resourceType, resourceId])
  @@index([memberstackId])
  @@index([resourceType])
}

enum ResourceType {
  ARTICLE
  PATTERN
}

/// User reading progress (optional - tracks which articles have been read)
model ReadingProgress {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId String
  articleId     String   @db.ObjectId
  completed     Boolean  @default(false)
  progress      Int      @default(0) // Percentage 0-100
  lastReadAt    DateTime @default(now())

  @@unique([memberstackId, articleId])
  @@index([memberstackId])
}

// ============================================
// CACHE: Cryptocurrency Data Cache
// ============================================

/// Cache for cryptocurrency data (reduces external API calls)
model CryptoCache {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  symbol       String   @unique
  name         String
  currentPrice Float
  marketCap    Float?
  volume24h    Float?
  change1h     Float?
  change24h    Float?
  change7d     Float?
  rank         Int?
  logoUrl      String?
  lastUpdated  DateTime @default(now())

  @@index([rank])
  @@index([lastUpdated])
}

// ============================================
// ALERTS: Price Alerts (Future Feature)
// ============================================

/// User-defined price alerts
model PriceAlert {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  memberstackId String
  cryptoSymbol  String
  targetPrice   Float
  condition     AlertCondition
  isActive      Boolean        @default(true)
  triggeredAt   DateTime?
  createdAt     DateTime       @default(now())

  @@index([memberstackId])
  @@index([cryptoSymbol, isActive])
}

enum AlertCondition {
  ABOVE
  BELOW
}

// ============================================
// ADMIN: Audit Logging
// ============================================

/// Tracks all admin actions for accountability
model AdminAuditLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  adminEmail  String   // Email of admin who performed action
  adminId     String   // Memberstack ID of admin
  action      String   // CREATE, UPDATE, DELETE
  targetType  String   // USER, ARTICLE, PATTERN
  targetId    String   // ID of affected resource
  targetName  String   // Name/title for display
  changes     Json?    // { before: {...}, after: {...} }
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([adminEmail])
  @@index([targetType])
  @@index([action])
  @@index([createdAt])
}
